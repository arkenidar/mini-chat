    "version": "0.2.0",
    "configurations": [
        {
            /* php -t pages -S localhost:8080 */
            "name": "(!) Launch built-in server and debug",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "localhost:8080",
                "-t",
                "pages"
            ],
            "port": 9003,
            "serverReadyAction": {
                "action": "openExternally"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug current script in console",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "externalConsole": false,
            "port": 9003
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        }
    ]
}